<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrujilloIsaacExamenP3.MainPage">

    <ScrollView>
        <VerticalStackLayout
             Padding="20" Spacing="15">
            <Label Text="Nombre del Pais" FontSize="Medium" />
            <Entry Placeholder="Ingresa el Pais" Text="{Binding Nombre}" />
            <Button Text="Buscar"
        Command="{Binding BuscarAPICommand}" />
           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
