<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrujilloIsaacExamenP3.MainPage">

    <ContentPage.BindingContext>
        <viewModels:BuscadorViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label x:Name="scordova_label1" Text="Nombre del País" FontSize="Medium" />
            <Entry x:Name="scordova_entry1" Placeholder="Ingresa el país" Text="{Binding Nombre}" />
            <Button x:Name="scordova_btnBuscar" Text="Buscar" Command="{Binding BuscarCommand}" />
            <Button x:Name="scordova_btnLimpiar" Text="Limpiar" Command="{Binding LimpiarCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>