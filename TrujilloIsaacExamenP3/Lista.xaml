<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrujilloIsaacExamenP3.Lista"
             Title="Lista">

    <ContentPage.BindingContext>
        <viewModels:ListaViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <ListView x:Name="scordova_list1" ItemsSource="{Binding Paises}" />
        <Button x:Name="scordova_btnCargar" Text="Cargar Paises" Command="{Binding CargarPaisesCommand}" />
    </VerticalStackLayout>
</ContentPage>